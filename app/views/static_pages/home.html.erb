
<div class = "container" style= "margin-top:50px;">
	<div class = "row">
		<div class="col-md-4">
			<h2>Search People</h2>
			<%=form_tag people_path, :method => 'get' do %>
				<p>
					<%= text_field_tag :search, params[:search]%>
					<%= submit_tag :search, :as =>"Search" %>
				</p>
			<% end %>
			</br><p style="font-size:20px;">Or</p>
			<h1><%= button_to "Sign Up", new_user_path, :method => 'get', :class => "btn btn-primary btn-lg"%></h1>
		</div>
	</div>
</div>